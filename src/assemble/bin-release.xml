<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
        <format>tar.bz2</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
<!-- remove the includes and add the excludes just in the following dependencySet to build a self-contained distribution -->
        <dependencySet>
            <outputDirectory>ext</outputDirectory>
            <includes>
                <include>${project.groupId}:dependency-tools</include>
            </includes>
            <fileMode>0644</fileMode>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/assemble/resources/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <directoryMode>0644</directoryMode>
        </fileSet>
        <fileSet>
            <directory>src/assemble/resources/examples</directory>
            <outputDirectory>examples</outputDirectory>
            <directoryMode>0644</directoryMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/site/dependency-tools.pdf</source>
            <fileMode>0644</fileMode>
            <outputDirectory>examples/dependency-tools</outputDirectory>
        </file>
    </files>
</assembly>
